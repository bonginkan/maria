{
  "description": "Configuration for syncing maria_code to maria OSS repository",
  "exclude_paths": [
    "maria-code-lp/**",
    "packages/studio-app/**",
    "packages/core-api/**",
    "packages/dataflow-jobs/**",
    "packages/ai-agents/**",
    "infra/**",
    "schemas/**",
    "docs/internal/**",
    "*.internal.md",
    "*.private.*",
    ".env*",
    "outputs/**",
    "models/**",
    "legacy/**",
    "internal/**",
    "test-*.js",
    "test-*.mjs",
    "test-*.cjs",
    "temp-*.js",
    "maria-oss/**",
    "oss-package/**",
    "oss-secure-package/**"
  ],
  "include_paths": [
    "packages/code-cli/src/**",
    "packages/code-cli/dist/**",
    "bin/**",
    "scripts/post-install.js",
    "scripts/auto-start-llm.sh",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "tsconfig.json",
    ".npmignore",
    ".github/workflows/release.yml"
  ],
  "transform_rules": {
    "package.json": {
      "remove_fields": ["private", "workspaces"],
      "remove_dependencies_pattern": "^@maria/",
      "update_fields": {
        "name": "@bonginkan/maria",
        "homepage": "https://github.com/bonginkan/maria",
        "repository": {
          "type": "git",
          "url": "git+https://github.com/bonginkan/maria.git"
        }
      }
    }
  }
}